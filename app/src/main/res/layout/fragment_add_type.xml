<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >



        <TextView
            android:id="@+id/txt_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:text="Add Expert Type"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/edx_addtype"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:hint="Enter Expert Type"
            android:background="@android:color/white"
            android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edx_addfees"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:hint="Enter Fess"

            android:background="@android:color/white"
            android:digits="1234567890 "
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_addtype"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_marginTop="40dp"
            android:background="#20d2bb"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ADD"

            />

        <TextView
            android:id="@+id/txt_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
               android:gravity="center"
            android:background="@android:color/white"
            android:textColor="#000"
            android:text="All Expert Type"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/expertlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp" />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>